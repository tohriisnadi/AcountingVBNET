    Function selectKasMasuk()
        Dim oDataTabel As New DataTable
        oDataTabel.Clear()
        ModKoneksi.BukaKoneksi()
        Command.Connection = ModKoneksi.Koneksi
        Command.CommandType = CommandType.Text
        Command.CommandText = "select top 5 tgl, sum(debet) as Debet, sum(kredit)as Kredit from tbDetilJurnal where left(akun,1)='1' group by tgl"
        oDataAdapter.SelectCommand = Command
        oDataAdapter.Fill(oDataTabel)
